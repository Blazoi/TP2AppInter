<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="View.GestionComptesPage"
             Title=""
             HeightRequest=" 725"
             WidthRequest="500">
    <VerticalStackLayout
        WidthRequest="450"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        TranslationY="-15">
        <Label
            Text="Catalogue de livres"
            FontSize="25"
            FontAttributes="Bold"
            Margin="0, 0, 0, 10"/>

        <CollectionView
            x:Name="ListeDeLivres"
            ItemsSource="{Binding ListeDeComptes}"
            HeightRequest="500"
            SelectionMode="Single"
            Margin="0,0,0,10">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout
                    Orientation="Vertical"
                    ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        BackgroundColor="#06402b"
                        HeightRequest="100"
                        Padding="10"
                        StrokeThickness="0"
                        StrokeShape="10">

                        <Grid
                            ColumnDefinitions="Auto, Auto, * , Auto"
                            VerticalOptions="Center">
                            <VerticalStackLayout
                                Grid.Column="0">
                                <HorizontalStackLayout>
                                    <Label Text="{Binding Prenom}"
                                           TextColor="White"
                                           FontSize="15"/>
                                    <Label Text="{Binding Nom}"
                                       TextColor="White"
                                       FontSize="15"
                                           Margin="5,0,0,0"/>
                                </HorizontalStackLayout>
                                <Label Text="{Binding Email}"
                                       TextColor="#AAA"
                                       FontSize="12"/>
                            </VerticalStackLayout>

                        </Grid>
                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout
            HorizontalOptions="Center">
            <Button
                Text="Retour"
                TextColor="White"
                BackgroundColor="#06402b"
                FontSize="20"
                FontAttributes="Bold"
                WidthRequest="200"
                TranslationY="10"
                Command="{Binding GoToCatalogue}"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>