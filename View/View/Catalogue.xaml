<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="View.Catalogue"
             Title=""
             HeightRequest=" 725"
             WidthRequest="500">
    <VerticalStackLayout
        WidthRequest="450"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        TranslationY="-15">
        <Grid
    Margin="0,0,0,20"
    WidthRequest="450"
    HeightRequest="60">

    <Label
        Text="Catalogue de livres"
        FontSize="25"
        FontAttributes="Bold"
        Margin="0, 0, 0, 10"
        HorizontalOptions="Start"
        VerticalOptions="Center"/>
    

    <Button
        Text="Déconnexion"
        TextColor="#06402b"
        BackgroundColor="White"
        FontSize="15"
        FontAttributes="Bold"
        Command="{Binding GoToConnexion}"
        HorizontalOptions="End"
        VerticalOptions="Center"/>

</Grid>



        <CollectionView
            x:Name="ListeDeLivres"
            ItemsSource="{Binding Livres}"
            HeightRequest="500"
            SelectionMode="Single"
            Margin="0,0,0,10">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout
                    Orientation="Vertical"
                    ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        BackgroundColor="#06402b"
                        HeightRequest="100"
                        Padding="10"
                        StrokeThickness="0"
                        StrokeShape="10">

                        <Grid
                            ColumnDefinitions="Auto, Auto, * , Auto"
                            VerticalOptions="Center">
                            <VerticalStackLayout
                                    Grid.Column="0">
                                <Label Text="{Binding Titre}"
                                       TextColor="White"
                                       FontSize="15"/>
                                <Label Text="{Binding Auteur}"
                                       TextColor="#AAA"
                                       FontSize="12"/>
                            </VerticalStackLayout>

                            <BoxView Grid.Column="1"
                                     BackgroundColor="Transparent"/>

                            <VerticalStackLayout
                                    Grid.Column="2"
                                    HorizontalOptions="Center">
                                <Label Text="{Binding MoyenneEvaluation}"
                                       TextColor="White" FontSize="15"
                                       HorizontalOptions="End"/>
                                <Label Text="{Binding DatePublication}"
                                       TextColor="#AAA" FontSize="13"
                                       HorizontalOptions="End"/>
                            </VerticalStackLayout>

                            <BoxView Grid.Column="3"
                                     BackgroundColor="Transparent"/>

                            <VerticalStackLayout
                                    Grid.Column="4"
                                    HorizontalOptions="End">
                                <Button Text="Voir +"
                                        BackgroundColor="#58756B"
                                        TextColor="White"
                                        FontSize="15"
                                        FontAttributes="Bold"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToLivre}"
                                        CommandParameter="{Binding}"/>
                            </VerticalStackLayout>

                        </Grid>
                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout>
            <Button
                Text="Favoris"
                TextColor="White"
                BackgroundColor="#06402b"
                FontSize="15"
                FontAttributes="Bold"
                TranslationY="10"
                Command="{Binding GoToFavoris}"/>
            <Button
                Text="Déconnexion"
                TextColor="#06402b"
                BackgroundColor="White"
                FontSize="15"
                FontAttributes="Bold"
                TranslationY="10"
                Margin="15,0,0,0"
                Command="{Binding GoToConnexion}"/>
        </HorizontalStackLayout>
        <Label
            Text="Menu Admin"
            TextColor="White"
            FontSize="18"
            FontAttributes="Bold"
            TranslationY="12"
            IsVisible="{Binding IsAdmin}"/>
        <HorizontalStackLayout
            Margin="0,10,0,0">
            
            <Button
                Text="Comptes"
                TextColor="White"
                BackgroundColor="#06402b"
                FontSize="15"
                FontAttributes="Bold"
                TranslationY="10"
                Margin="0,0,15,0"
                Command="{Binding GoToComptes}"
                IsVisible="{Binding IsAdmin}"/>
            <Button
                Text="Ajouter Livre"
                TextColor="White"
                BackgroundColor="#06402b"
                FontSize="15"
                FontAttributes="Bold"
                TranslationY="10"
                Margin="0,0,0,0"
                Command="{Binding GoToAjout}"
                IsVisible="{Binding  IsAdmin}"/>
            <Button
                Text="Supprimer Livres"
                TextColor="White"
                BackgroundColor="#06402b"
                FontSize="15"
                FontAttributes="Bold"
                TranslationY="10"
                Margin="15,0,0,0"
                Command="{Binding GoToSuppression}"
                IsVisible="{Binding IsAdmin}"/>

            <Label
                Text=""/>

        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>
