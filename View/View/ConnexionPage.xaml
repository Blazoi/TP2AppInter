<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="View.ConnexionPage"
             Title=""
             WidthRequest="500"
             HeightRequest="500">


    <VerticalStackLayout
            HorizontalOptions="Center"
            WidthRequest="450">
        <Label Text="Authentification"
               Margin="0,20,0,0"
               FontSize="25"
               FontAttributes="Bold"/>

        <Label Text="Courriel"
               Margin="0,20,0,10"
               FontSize="18"/>
        <Entry
            Text="{Binding utilisateur.Email, Mode=TwoWay}"
            Placeholder="Votre.Propre@courriel.com"/>
            

        <Label Text="Mot de passe"
               Margin="0,20,0,10"
               FontSize="18"/>
        <Entry
            Text="{Binding utilisateur.MotDePasse, Mode=TwoWay}"
            Placeholder="Mot de Passe SÃ©curitaire"/>

        <Button Text="Se connecter"
                Margin="0,20,0,0"
                FontSize="20"
                BackgroundColor="#06402b"
                TextColor="White"
                FontAttributes="Bold"
                Command="{Binding ConnectButton}"/>


    </VerticalStackLayout>
</ContentPage>